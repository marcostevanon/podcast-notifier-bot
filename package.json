{
  "name": "spotify-podcast-notifier-bot",
  "version": "1.0.1",
  "description": "Get notifications when your favorite podcasts released new episodes on Spotify",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "prestart": "npm install",
    "start": "nodemon --ext ts --watch src --exec ts-node src/index.ts",
    "deploy": "vercel deploy",
    "deploy:setwebhook": "bash scripts/setwebhook.sh && ts-node scripts/setcommands # executed during ci",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.168",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.22",
    "@types/spotify-web-api-node": "^5.0.0",
    "@vercel/node": "^1.9.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/spotify-api": "^0.0.7",
    "lodash": "^4.17.20",
    "mongodb": "^3.6.3",
    "spotify-web-api-node": "^5.0.2",
    "telegraf": "^4.0.2"
  }
}
