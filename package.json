{
  "name": "spotify-podcast-notifier-bot",
  "version": "1.0.1",
  "description": "Get notifications when your favorite podcasts released new episodes on Spotify",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "start": "npm-run-all --parallel start:**",
    "start:bot": "nodemon --ext ts --watch src --exec './node_modules/.bin/ts-node' src/bot/index.ts",
    "start:observer": "nodemon --ext ts --watch src --exec './node_modules/.bin/ts-node' src/observer/index.ts",
    "deploy": "vercel deploy",
    "deploy:setwebhook": "bash scripts/setwebhook.sh"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.168",
    "@types/mongodb": "^3.6.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.22",
    "@types/node-cron": "^2.0.3",
    "@vercel/node": "^1.9.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "node-cron": "^2.0.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "lodash": "^4.17.20",
    "mongodb": "^3.6.3",
    "qs": "^6.9.6",
    "telegraf": "^4.0.2"
  }
}
